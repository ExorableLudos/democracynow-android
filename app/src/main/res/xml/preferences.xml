<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_category_settings">
        <ListPreference
            android:key="tab_preference"
            android:title="@string/setting_tab"
            android:summary="%s Tab"
            android:entries="@array/tabsAlias"
            android:entryValues="@array/tabs" />
        <ListPreference
            android:key="stream_preference"
            android:title="@string/setting_stream"
            android:summary="%s Stream"
            android:entries="@array/streamAlias"
            android:entryValues="@array/stream" />
        <CheckBoxPreference
            android:key="wifi_preference"
            android:title="@string/setting_wifi"
            android:summary="@string/summary_wifi"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="image_preference"
            android:title="@string/setting_image"
            android:summary="@string/img_pref_summary"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="notification_preference"
            android:title="@string/pref_notification"
            android:summary="Not yet Implemented"
            android:defaultValue="false" />
        <ListPreference
            android:key="language_preference"
            android:title="Language"
            android:summary="Not yet Implemented"
            android:entries="@array/Language"
            android:entryValues="@array/languageAlias"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_info">
        <Preference
            android:key="pref_static_field_key0"
            android:selectable="false"
            android:title="Application Version"
            android:summary="Democracy Droid! 2.2.1"/>
        <Preference
            android:key="pref_static_field_key1"
            android:selectable="false"
            android:title="Software License"
            android:summary="GNU General Public License v3"/>
        <Preference
            android:key="pref_static_field_key2"
            android:selectable="false"
            android:title="Content License"
            android:summary="Creative Commons Attribution-NonCommercial-NoDerivs 3.0 United States"/>
        <Preference
            android:key="pref_static_field_key3"
            android:title="Source Code and Issue Tracker"
            android:summary="Click to open">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://github.com/polypmer/DemocracyDroid"/>
        </Preference>
        <Preference
            android:key="pref_static_field_key4"
            android:title="Developer"
            android:summary="Fenimore Love">
            <intent android:action="android.intent.action.VIEW"
                android:data="http://another.workingagenda.com"/>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>